{
  "info": {
    "name": "Purchase Management API",
    "description": "A collection of API endpoints for managing purchases in the Stock Inventory System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "GET Endpoints",
      "item": [
        {
          "name": "Get All Purchases",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases"]
            },
            "description": "Get all purchases. Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Purchase by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases/1",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "1"]
            },
            "description": "Get a specific purchase by its ID. Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Purchase by PO ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases/po/PO-2024-001",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "po", "PO-2024-001"]
            },
            "description": "Get a purchase by its PO ID. Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Purchases by Vendor",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases/vendor/ABC Suppliers",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "vendor", "ABC Suppliers"]
            },
            "description": "Get purchases by vendor name. Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Purchases by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases/status/PENDING",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "status", "PENDING"]
            },
            "description": "Get purchases by payment status (PENDING, PAID, PARTIAL, OVERDUE, CANCELLED). Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Purchases by Date Range",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases/date-range?startDate=2024-01-01&endDate=2024-12-31",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "date-range"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                }
              ]
            },
            "description": "Get purchases within a date range. Requires USER, MODERATOR, or ADMIN role."
          }
        }
      ]
    },
    {
      "name": "POST/PUT Endpoints",
      "item": [
        {
          "name": "Create Purchase",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"vendorName\": \"ABC Suppliers\",\n    \"poId\": \"PO-2024-001\",\n    \"productName\": \"Laptop Dell XPS 13\",\n    \"quantity\": 5,\n    \"unitPrice\": 1200.00,\n    \"purchaseDate\": \"2024-01-15\",\n    \"deliveryDate\": \"2024-01-25\",\n    \"paymentStatus\": \"PENDING\",\n    \"productId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/purchases",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases"]
            },
            "description": "Create a new purchase. Requires MODERATOR or ADMIN role."
          }
        },
        {
          "name": "Update Purchase",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"vendorName\": \"XYZ Suppliers\",\n    \"poId\": \"PO-2024-001\",\n    \"productName\": \"Laptop Dell XPS 15\",\n    \"quantity\": 3,\n    \"unitPrice\": 1500.00,\n    \"purchaseDate\": \"2024-01-15\",\n    \"deliveryDate\": \"2024-01-20\",\n    \"paymentStatus\": \"PARTIAL\",\n    \"productId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/purchases/1",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "1"]
            },
            "description": "Update an existing purchase. Requires MODERATOR or ADMIN role."
          }
        }
      ]
    },
    {
      "name": "PATCH Endpoints",
      "item": [
        {
          "name": "Update Payment Status",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases/1/status?status=PAID",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "1", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "PAID"
                }
              ]
            },
            "description": "Update the payment status of a purchase. Available statuses: PENDING, PAID, PARTIAL, OVERDUE, CANCELLED. Requires MODERATOR or ADMIN role."
          }
        }
      ]
    },
    {
      "name": "DELETE Endpoints",
      "item": [
        {
          "name": "Delete Purchase",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/purchases/1",
              "host": ["{{base_url}}"],
              "path": ["api", "purchases", "1"]
            },
            "description": "Delete a purchase. Requires ADMIN role."
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your-jwt-token-here",
      "type": "string"
    }
  ]
}
