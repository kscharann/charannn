{
  "info": {
    "name": "Attendance Management API",
    "description": "API endpoints for managing employee attendance records",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "GET Endpoints",
      "item": [
        {
          "name": "Get All Attendance",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/attendance",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance"]
            },
            "description": "Get all attendance records. Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Attendance by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/attendance/1",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "1"]
            },
            "description": "Get attendance record by ID. Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Attendance by Employee ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/attendance/employee/EMP001",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "employee", "EMP001"]
            },
            "description": "Get attendance records by employee ID. Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Attendance by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/attendance/status/PRESENT",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "status", "PRESENT"]
            },
            "description": "Get attendance records by status (PRESENT, ABSENT, LATE, HALF_DAY, ON_LEAVE). Requires USER, MODERATOR, or ADMIN role."
          }
        },
        {
          "name": "Get Attendance by Date Range",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/attendance/date-range?startDate=2024-01-01&endDate=2024-12-31",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "date-range"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                }
              ]
            },
            "description": "Get attendance records within a date range. Requires USER, MODERATOR, or ADMIN role."
          }
        }
      ]
    },
    {
      "name": "POST/PUT Endpoints",
      "item": [
        {
          "name": "Create Attendance",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"empId\": \"EMP001\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"role\": \"Developer\",\n    \"attendanceDate\": \"2024-01-15\",\n    \"timeIn\": \"09:00:00\",\n    \"timeOut\": \"17:00:00\",\n    \"status\": \"PRESENT\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/attendance",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance"]
            },
            "description": "Create a new attendance record. Requires MODERATOR or ADMIN role."
          }
        },
        {
          "name": "Update Attendance",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"empId\": \"EMP001\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"role\": \"Senior Developer\",\n    \"attendanceDate\": \"2024-01-15\",\n    \"timeIn\": \"09:30:00\",\n    \"timeOut\": \"17:30:00\",\n    \"status\": \"LATE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/attendance/1",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "1"]
            },
            "description": "Update an existing attendance record. Requires MODERATOR or ADMIN role."
          }
        }
      ]
    },
    {
      "name": "PATCH Endpoints",
      "item": [
        {
          "name": "Update Attendance Status",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/attendance/1/status?status=LATE",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "1", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "LATE"
                }
              ]
            },
            "description": "Update attendance status (PRESENT, ABSENT, LATE, HALF_DAY, ON_LEAVE). Requires MODERATOR or ADMIN role."
          }
        }
      ]
    },
    {
      "name": "DELETE Endpoints",
      "item": [
        {
          "name": "Delete Attendance",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/attendance/1",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "1"]
            },
            "description": "Delete an attendance record. Requires ADMIN role."
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your-jwt-token-here",
      "type": "string"
    }
  ]
}
