{
    "info": {
        "name": "Updated Attendance API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "üîê Authentication",
            "item": [
                {
                    "name": "Login as Admin",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response contains JWT token\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.accessToken).to.exist;",
                                    "    pm.expect(jsonData.tokenType).to.eql(\"Bearer\");",
                                    "    ",
                                    "    // Save token to environment variable",
                                    "    pm.environment.set(\"jwt_token\", jsonData.accessToken);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/signin",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "auth", "signin"]
                        }
                    }
                }
            ]
        },
        {
            "name": "üìù Attendance Management",
            "item": [
                {
                    "name": "Create Attendance",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"empId\": \"EMP001\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"role\": \"Developer\",\n    \"attendanceDate\": \"2024-01-15\",\n    \"timeIn\": \"09:00:00\",\n    \"timeOut\": \"17:00:00\",\n    \"status\": \"PRESENT\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "attendance"]
                        },
                        "description": "Create a new attendance record"
                    }
                },
                {
                    "name": "Get All Attendance",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "attendance"]
                        }
                    }
                },
                {
                    "name": "Get Attendance by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "attendance", "1"]
                        }
                    }
                },
                {
                    "name": "Update Attendance",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"empId\": \"EMP001\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"role\": \"Senior Developer\",\n    \"attendanceDate\": \"2024-01-15\",\n    \"timeIn\": \"09:00:00\",\n    \"timeOut\": \"18:00:00\",\n    \"status\": \"PRESENT\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "attendance", "1"]
                        }
                    }
                },
                {
                    "name": "Update Attendance Status",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance/1/status?status=LATE",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "attendance", "1", "status"],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "LATE"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Attendance",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/attendance/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "attendance", "1"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080",
            "type": "string"
        }
    ]
}
